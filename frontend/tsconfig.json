{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": ".build",
    "rootDir": ".",
    "baseUrl": ".",
    "target": "esnext"
    // "paths": {
    //   "@/*": [
    //     "./*"
    //   ]
    // }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
  // "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  // "exclude": [
  //   "node_modules"
  // ],
  // "include": [
  //   "next-env.d.ts",
  //   "**/*.ts",
  //   "**/*.tsx", "jest.config.js"  ]
}
